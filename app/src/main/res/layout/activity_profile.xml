<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ff333366"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:paddingBottom="40dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="80dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Edit Profie"
                    android:textColor="#FFFFFFFF"
                    android:textSize="24dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:gravity="center">

                <RelativeLayout
                    android:layout_width="80dp"
                    android:layout_height="80dp">

                    <ImageView
                        android:id="@+id/profile_image_iv"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:background="@drawable/shape_oval_ff000033"/>

                    <TextView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/shape_oval_ffffffff"
                        android:gravity="center"
                        android:text="+"
                        android:textSize="16dp"/>
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="20dp"
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="#FFFFFFFF"
                    android:text="code : "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/my_yop_code_tv"
                    android:textColor="#FFFFFFFF"
                    android:text="12356"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="NAME"
                    android:textColor="#66FFFFFF"
                    android:textSize="12dp"/>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginTop="10dp">

                <EditText
                    android:id="@+id/nickname_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:hint="sickname"
                    android:textColor="#FFFFFFFF"
                    android:textColorHint="#66FFFFFF"
                    android:textSize="12dp"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:background="#66FFFFFF"/>

                <TextView
                    android:id="@+id/nickname_clear_btn"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/shape_oval_ffffffff"
                    android:gravity="center"
                    android:text="X"
                    android:textSize="12dp"/>
            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SNS ACCOUNT"
                    android:textColor="#66FFFFFF"
                    android:textSize="12dp"/>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginTop="10dp">

                <EditText
                    android:id="@+id/sns_type_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:hint="Kakao Talk"
                    android:textColor="#FFFFFFFF"
                    android:textColorHint="#66FFFFFF"
                    android:textSize="12dp"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:background="#66FFFFFF"/>

            </RelativeLayout>

            <View
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="1dp"></View>
            <LinearLayout
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/submit_btn"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:background="@drawable/shape_oval_ff33cc99"
                    android:gravity="center"
                    android:text="->"
                    android:textSize="18dp"/>
            </LinearLayout>


        </LinearLayout>


    </RelativeLayout>
</layout>